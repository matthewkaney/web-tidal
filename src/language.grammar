@top Program { statement* }

statement {
  expression newline
}

expression {
  Term Term*
}

Term {
  Identifier | Grouping
}

Grouping { "(" expression ")" }

@tokens {
  Identifier { $[a-zA-Z_]+ }
  String { '"' (!["\\] | "\\" _)* '"' }
  Boolean { "true" | "false" }
  LineComment { "--" ![\n]* }
  space { $[ \t]+ }
  "(" ")"
  newline { "\n" }
}

@skip { space }